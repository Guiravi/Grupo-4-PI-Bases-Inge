<%@ Master Language="C#" AutoEventWireup="true" CodeFile="MasterPageTCP.master.cs" Inherits="MasterPageTCP" %>

<!DOCTYPE html>

<html>

<head runat="server">

    <style>
        header {
            background-image: url("Imagenes/Sitio/trip.gif");
            background-attachment: fixed;
            width: 100%;
            height: 75px;
            margin: 0;
            padding: 0;
        }

        body {
            margin: 0;
            padding: 0;
        }

        ul {
            list-style-type: none;
            height: 100%;
            width: 1280px;
            padding: 0;
            margin: 0;
            float: left;
            border-bottom: solid black 2px;
        }

        .navLink {
            display: block;
            width: 100%;
            height: 100%;
            text-align: center;
            text-decoration: none;
            color: black;
            padding-top: 20px;
            font-size: 200%;
            
        }

        a:hover {
            text-decoration: underline;
        }

        li {
        
            float: left;
            vertical-align: middle;
            background-color: #ffffff;
            width: 25%;
            height: 100%;
            margin: 0;
            padding: 0;
            border-radius: 10px 10px 0 0;
            position: relative;
            bottom: 10px;
            border-top: solid black 2px; 
        }

        nav {
            width: 100%;
            height: 100px; 
        }

        #logo {
            width: 318px;
            height: 100%;
            float: left;
            margin: 0;
            border-bottom: solid black 2px;
            border-right: solid black 2px; 
            position: static;
            float: left;
            
        }

        #seccionAvatar {
            width: 300px;
            height: 100%;
            background: linear-gradient(90deg, #4CB8C4 0%, #3CD3AD 100%);
            position: static;
            float: right;
            border-bottom: solid black 2px; 
            border-left: solid black 2px; 
        }

        #avatar {
            height: 75px;
            width: 75px;
            float: left;
            border: solid black 1px;
            border-radius: 100px 100px;
            margin-top: 15px;
            margin-left: 25px;
        
        }

        #foot {
            width: 100%;
            height:50px;
            background: linear-gradient(90deg, #4CB8C4 0%, #3CD3AD 100%);
        }

        a[href="MiPerfil.aspx"] {
            text-align: left;
            margin: 0;
            padding: 0;
            padding-left: 50px;
            padding-top: 20px;
            float: left;
            height: 50px;
            width: 100px
        }

        main {
            min-height: 1000px;
            background-color: #D4D4D0;
            padding: 50px 50px;
            font-family: 'Times New Roman', Times, serif;
        }

    </style>

    <asp:ContentPlaceHolder ID="pageHead" runat="server"></asp:ContentPlaceHolder>

</head>
<body>
    <header>
    </header>
    <nav>
        <img id="logo" src="Imagenes/Sitio/logoTCP.png">
        <ul>
            <li><a class="navLink" href="Inicio.aspx">Inicio</a></li>
            <li><a class="navLink" href="Noticias.aspx">Noticias</a></li>
            <li><a class="navLink" href="BuscarArticulos.aspx">Buscar</a></li>
            <li><a class="navLink" href="UserFaqs.aspx">FAQ</a></li>
        </ul>
        <div id="seccionAvatar">
            <a id="miPefil" class="navLink" href="MiPerfil.aspx">Mi <br \>Perfil</a>
            <img id="avatar" src="Imagenes/Sitio/avatarDefecto.png">
        </div>
    </nav>
    <main>

        <asp:ContentPlaceHolder ID="pageContent" runat="server"></asp:ContentPlaceHolder>
    
    </main>
    <footer>
        <div id="foot""></div>
    </footer>
</body>
</html>
