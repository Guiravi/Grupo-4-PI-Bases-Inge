@page "{cerrarSesion?}"
@using LaCafeteria.Utilidades;
@model LaCafeteria.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
@if(Notificaciones.Existe(Model,"cerrarSesion"))
{
	@Html.Raw(Notificaciones.Get(Model, "cerrarSesion"))
}
<form class="form-horizontal" method="post">
	<div class="form-group">
		<label for="inputEmail3" class="col-sm-2 control-label">Nombre de usuario</label>
		<div class="col-sm-4">
			<input asp-for="usernamePK" type="text" class="form-control" id="txtUsername" placeholder="Nombre de usuario">
			<span asp-validation-for="usernamePK"></span>
		</div>
	</div>
	<div class="form-group">
		<label for="txtContrasena" class="col-sm-2 control-label">Contraseña</label>
		<div class="col-sm-4">
			<input type="password" class="form-control" id="txtContrasena" name="txtContrasena" placeholder="Contraseña" disabled>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<button type="submit" class="btn btn-default">Iniciar sesión</button>
		</div>
	</div>
</form>

