<div class="panel">
    <div class="panel-heading panel-default">
        <h3 class="panel-title text-center">Formulario de Revisión de Artículo</h3>
    </div>

    <div class="panel-body">
        <form method="post">
            <div class="text-center">
                <label>Opinión General del artículo</label>
            </div>
            <div class="text-center">
                <div class="btn-group" id="opinionGeneral" role="group" aria-label="Opinion General">
                    <button type="button" class="btn btn-default">0</button>
                    <button type="button" class="btn btn-default">1</button>
                    <button type="button" class="btn btn-default">2</button>
                    <button type="button" class="btn btn-default">3</button>
                    <button type="button" class="btn btn-default">4</button>
                    <button type="button" class="btn btn-default">5</button>
                </div>
            </div>

            <div class="text-center">
                <label>Contribución del artículo</label>
            </div>
            <div class="text-center">
                <div class="btn-group" id="contribucion" role="group" aria-label="Contribución del artículo">
                    <button type="button" class="btn btn-default">0</button>
                    <button type="button" class="btn btn-default">1</button>
                    <button type="button" class="btn btn-default">2</button>
                    <button type="button" class="btn btn-default">3</button>
                    <button type="button" class="btn btn-default">4</button>
                    <button type="button" class="btn btn-default">5</button>
                </div>
            </div>

            <div class="text-center">
                <label>Forma del artículo</label>
            </div>
            <div class="text-center">
                <div class="btn-group" id="forma" role="group" aria-label="Forma del Artículo">
                    <button type="button" class="btn btn-default">0</button>
                    <button type="button" class="btn btn-default">1</button>
                    <button type="button" class="btn btn-default">2</button>
                    <button type="button" class="btn btn-default">3</button>
                    <button type="button" class="btn btn-default">4</button>
                    <button type="button" class="btn btn-default">5</button>
                </div>
            </div>

            <div>
                <p>Recomendación:</p>
                <p>Aceptar</p>
                <p>Rechazar</p>
                <p>Aceptar con Modificaciones</p>
            </div>


            <label>Comentarios</label>
            <div class="text-center">
                <textarea placeholder="Escriba sus comentarios sobre el artículo" rows="5" cols="100"></textarea>
            </div>


        </form>

        <div class="container text-center">
            <form method="post" style="display:inline-block">
                <input type="button" class="btn btn-danger" value="Cancelar" />
            </form>

            <form method="post" style="display:inline-block">

                <input type="button" class="btn btn-success" value="Enviar Revisión" />
            </form>
        </div>
    </div>
</div>